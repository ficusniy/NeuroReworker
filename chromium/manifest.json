{
  "manifest_version": 3,
  "name": "NeuroReworker",
  "version": "1.3",
  "description": "Краткий AI-пересказ веб-страниц",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}